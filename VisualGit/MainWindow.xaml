<Window x:Class="VisualGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="417" Width="1020">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Commit}"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Name="History">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hash" Binding="{Binding Path=Hash}"></DataGridTextColumn>
                <DataGridTextColumn Header="Author" Binding="{Binding Path=Author}"></DataGridTextColumn>
                <DataGridTextColumn Header="Message" Binding="{Binding Path=Message}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="LoadGitLog" Content="Load git log" Height="23" Width="103"
                HorizontalAlignment="Left" Margin="46,343,0,0"
                VerticalAlignment="Top" Click="LoadGitLog_Click"></Button>
    </Grid>
</Window>
